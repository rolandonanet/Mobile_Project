<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/teacher_subjectGrid_dataGridLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="4dp"
    >

    <TextView
        android:id="@+id/teacher_subjectGrid_classroomViewTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginBottom="5dp"
        android:text="@string/sala"
        android:textStyle="bold"
        android:layout_centerInParent="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="5dp"
        />

    <TextView
        android:id="@+id/teacher_subjectGrid_classroomTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginBottom="5dp"
        android:hint="I03-H"
        android:layout_centerInParent="true"
        android:layout_toRightOf="@id/teacher_subjectGrid_classroomViewTextView"
        android:layout_toEndOf="@id/teacher_subjectGrid_classroomViewTextView"
        android:layout_marginStart="5dp"
        />

    <TextView
        android:id="@+id/teacher_subjectGrid_studentAmmountViewTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="5dp"
        android:text="@string/student_ammount"
        android:textStyle="bold"
        android:layout_centerInParent="true"
        android:layout_toRightOf="@id/teacher_subjectGrid_classroomTextView"
        android:layout_toEndOf="@id/teacher_subjectGrid_classroomTextView"
        />

    <TextView
        android:id="@+id/teacher_subjectGrid_studentAmmountTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginBottom="5dp"
        android:hint="qtde"
        android:layout_centerInParent="true"
        android:layout_toRightOf="@id/teacher_subjectGrid_studentAmmountViewTextView"
        android:layout_toEndOf="@id/teacher_subjectGrid_studentAmmountViewTextView"
        android:layout_marginStart="5dp" />

    <TextView
        android:id="@+id/teacher_subject_themeViewTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginBottom="5dp"
        android:text="@string/sala"
        android:textStyle="bold"
        android:layout_centerInParent="true"
        android:layout_toLeftOf="@id/teacher_subject_themeTextView"
        android:layout_toStartOf="@id/teacher_subject_themeTextView"
        android:layout_marginStart="5dp" />

    <TextView
        android:id="@+id/teacher_subject_themeTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="5dp"
        android:hint="Turma"
        android:layout_centerInParent="true"
        android:textStyle="bold"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        />

</RelativeLayout>